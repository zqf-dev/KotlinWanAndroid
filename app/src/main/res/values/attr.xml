<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitleBar">
        <attr name="back_image" format="reference"/>
        <attr name="home_image" format="reference"/>
        <attr name="centre_title" format="string"/>
        <attr name="centre_title_color" format="color"/>
        <attr name="show_home_image" format="boolean"/>
        <attr name="show_centre_title" format="boolean"/>
        <attr name="show_right_image" format="boolean"/>
        <attr name="show_right_title" format="boolean"/>
        <attr name="right_title_txt" format="string|reference"/>
        <attr name="right_image" format="reference"/>
        <attr name="title_background" format="reference"/>
    </declare-styleable>
    <declare-styleable name="MaxHeightEdittext">
        <attr name="et_maxHeight" format="dimension" />
    </declare-styleable>
    <declare-styleable name="MaxHeightRecyclerView">
        <attr name="rv_maxHeight" format="dimension" />
    </declare-styleable>
    <declare-styleable name="SwipeLayout">
        <attr name="drag_edge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>
        <attr name="leftEdgeSwipeOffset" format="dimension" />
        <attr name="rightEdgeSwipeOffset" format="dimension" />
        <attr name="topEdgeSwipeOffset" format="dimension" />
        <attr name="bottomEdgeSwipeOffset" format="dimension" />
        <attr name="show_mode" format="enum">
            <enum name="lay_down" value="0" />
            <enum name="pull_out" value="1" />
        </attr>
        <attr name="clickToClose" format="boolean" />
    </declare-styleable>
    <declare-styleable name="GiveALikeView">
        <!-- 进入动画 时长-->
        <attr name="enter_duration" format="integer"/>
        <!--路径动画 时长-->
        <attr name="curve_duration" format="integer"/>
    </declare-styleable>
</resources>